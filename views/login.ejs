<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - File Management System</title>
    <link href="../../assets2/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../assets2/css/now-ui-dashboard.css?v=1.5.0" rel="stylesheet">
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="../../assets2/demo/demo.css" rel="stylesheet">
  <style>
    body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(45deg, #3498db, #8e44ad);
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    color: #fff;
}

.login-container {
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    padding: 40px;
    width: 400px;
    text-align: center;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.login-header h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
    color: #fff;
}

.login-header p {
    font-size: 1.1em;
    color: #eee;
    margin-bottom: 30px;
}

.login-form {
    width: 100%;
}

.input-group {
    margin-bottom: 20px;
    text-align: left;
}

.input-group label {
    display: block;
    font-size: 1em;
    color: #fff;
    margin-bottom: 5px;
}

.input-group input {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 5px;
    background-color: rgba(255, 255, 255, 0.2);
    color: #fff;
    font-size: 1em;
    transition: background-color 0.3s ease;
}

.input-group input:focus {
    background-color: rgba(255, 255, 255, 0.3);
    outline: none;
}

.login-button {
    width: 100%;
    padding: 15px;
    border: none;
    border-radius: 5px;
    background-color: #2ecc71;
    color: #fff;
    font-size: 1.2em;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.login-button:hover {
    background-color: #27ae60;
}

.login-footer {
    margin-top: 30px;
    font-size: 1em;
}

.login-footer a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
}

.login-footer a:hover {
    text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 600px) {
    .login-container {
        width: 90%;
        padding: 30px;
    }

    .login-header h1 {
        font-size: 2em;
    }

    .login-header p {
        font-size: 1em;
    }

    .input-group input {
        padding: 10px;
        font-size: 0.9em;
    }

    .login-button {
        padding: 12px;
        font-size: 1.1em;
    }

    .login-footer {
        font-size: 0.9em;
    }
}


  </style>
</head>
<body>
    <div class="login-container">
        <%- include('./partials/messages') %>
          
        <div class="login-header">
            <h4>STVC <br>Central Document Management System</h4>
            <p>Welcome! Please log in to access your files.</p>
        </div>
        <div class="login-form">
            <form id="loginForm" action="/selamcdms/login" method="post">
                <div class="input-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Enter your username" required>
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="login-button">Login</button>
            </form>
        </div>
        <div class="login-footer">
            <!-- <p>Don't have an account? <a href="#">Sign up</a></p> -->
        </div>
    </div>
    <script src="../../assets2/js/core/jquery.min.js"></script>
    <script src="../../assets2/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="../../assets2/js/core/bootstrap.min.js"></script>
    <script src="../../assets2/js/plugins/bootstrap-notify.js"></script>
    <script src="../../assets2/js/now-ui-dashboard.min.js?v=1.5.0" type="text/javascript"></script><!-- Now Ui Dashboard DEMO methods, don't include it in your project! -->
    <script src="../../assets2/demo/demo.js"></script>
</body>

</html>